{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2016",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ],
}
